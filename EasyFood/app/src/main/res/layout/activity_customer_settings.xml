<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manager_settings"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="28dp" />

    <EditText
        android:id="@+id/emailAddress_editText"
        android:layout_width="374dp"
        android:layout_height="47dp"
        android:text="@string/email_address"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="75dp" />

    <EditText
        android:id="@+id/phoneNumber_editText"
        android:layout_width="374dp"
        android:layout_height="47dp"
        android:text="@string/phone_number"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="138dp"
        tools:text="Phone Number" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="377dp"
        android:layout_height="35dp"
        android:background="#DD0F00"
        android:text="@string/log_out"
        android:textColor="#F2F2F2"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="624dp" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="377dp"
        android:layout_height="45dp"
        android:text="@string/save"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="670dp" />

</androidx.constraintlayout.widget.ConstraintLayout>