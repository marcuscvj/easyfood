        </activity>
        <activity android:name=".view.BaseActivity" />
        <activity android:name=".view.customer.EateryActivity" />
        <activity android:name=".view.customer.CustomerMenuActivity" />
        <activity android:name=".view.manager.ManagerBaseActivity" />
        <activity android:name=".view.manager.ManagerMenuActivity" />
        <activity android:name=".view.manager.NewProductActivity" />
        <activity android:name=".view.manager.EditProductActivity" />
        <activity android:name=".view.manager.ManagerOrdersActivity" />
        <activity android:name=".view.manager.ManagerOrderActivity" />
        <activity android:name=".view.LoginActivity" />
        <activity android:name=".view.RegisterActivity" />
        <activity android:name=".view.customer.BasketActivity" />
        <activity android:name=".view.customer.CustomerOrdersActivity" />
    </application>

</manifest>